# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Main page
GET            /                             @controllers.PredictorServices.index

# Web Data Services
GET            /web/pages/home               @controllers.WebDataServices.homePage
GET            /web/pages/competitions       @controllers.WebDataServices.competitionsPage

# User services
POST           /user                         @controllers.PredictorServices.registerUser
POST           /login                        @controllers.PredictorServices.autheticateUser
POST           /logout                       @controllers.PredictorServices.endSession

# Competition services
GET            /competition/:id/table        @controllers.CompetitionServices.buildTable(id: Long)
POST           /competition/join             @controllers.CompetitionServices.joinCompetition
POST           /competition                  @controllers.CompetitionServices.createCompetition

# Prediction services
POST           /prediction                   @controllers.PredictionServices.makePrediction
PUT            /prediction                   @controllers.PredictionServices.updatePrediction

# Match services
POST           /match/result                 @controllers.MatchServices.result
PUT            /match/result                 @controllers.MatchServices.changeResult
POST           /match/cancel                 @controllers.MatchServices.cancel
POST           /match                        @controllers.MatchServices.create

# Map static resources from the /public folder to the /assets URL path
GET            /assets/*file                 controllers.Assets.at(path="/public", file)

# Options
OPTIONS        /*all                         controllers.Application.preflight(all)
